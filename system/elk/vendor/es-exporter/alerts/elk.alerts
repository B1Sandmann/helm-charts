groups:
- name: openstack-elk.alerts
  rules:
  - alert: OpenstackElkPredictOutOfDiskSpace
    expr: elasticsearch_data_diskspace_used_percentage{mount=~"/data \\(10.*"} > 85
    for: 30m
    labels:
      context: diskspace
      service: elk
      severity: info
      tier: os
      playbook: docs/support/playbook/elk_kibana_issues.html
    annotations:
      description: The disk usage on {{ $labels.host }}:{{ $labels.mount }} in the region {{ $labels.region }} cluster: {{ $labels.cluster }} cluster is above 85% now.
                   Please consider cleaning up elastic search or lower the retention period for the logs.
      summary: Elastic Search might run out of disk space

  - alert: OpenstackElkClusterRed
    expr: elasticsearch_cluster_health_status{color="red"} == 1
    for: 30m
    labels:
      context: nodes
      service: elk
      severity: info
      tier: os
      playbook: docs/support/playbook/elk_kibana_issues.html
    annotations:
      description: {{ $labels.region }} Cluster {{ $labels.cluster }} is RED. Please check all nodes.
      summary: {{ $labels.region }} Elasticsearch {{ $labels.cluster }} cluster is RED

  - alert: OpenstackElkClusterYellow
    expr: elasticsearch_cluster_health_status{cluster="elkelasticsearch",color="yellow"}
      == 1
    for: 30m
    labels:
      context: nodes
      service: elk
      severity: info
      tier: os
      playbook: docs/support/playbook/elk_kibana_issues.html
    annotations:
      description: {{ $labels.region }} Cluster {{ $labels.cluster }} is YELLOW. Please check the data
        nodes one or more are missing.
      summary: {{ $labels.region }} Elasticeearch {{ $labels.cluster }} cluster status is YELLOW
