groups:
- name: bios.alerts
  rules:
  - alert: BiosSettingNotCorrect
    expr: bios_exporter != 1
    for: 15m
    labels:
      severity: info
      tier: metal
      service: baremetal
      context: "{{ $labels.hostname }}"
      meta: "ironic {{ $labels.manufacturer }} node {{ $labels.hostname }} BIOS setting is not correct: {{ $labels.bios_setting }}"
      playbook: docs/devops/alert/baremetal/#baremetal-alerts--playbooks
    annotations:
      description: "ironic {{ $labels.manufacturer }} node {{ $labels.hostname }} BIOS setting is not correct: {{ $labels.bios_setting }} for 15m"
      summary: "Hardware error configuration error for instance: {{ $labels.instance }}"

