groups:
- name: network-interconnect.alerts
  rules:
  - alert: NetworkInterconnectPingFailed
    expr: (rate(cloudprober_total{probed_to_type="master",ptype="ping"}[5m]) - rate(cloudprober_success{probed_to_type="master",ptype="ping"}[5m])) / rate(cloudprober_total{probed_to_type="master",ptype="ping"}[5m]) > 0.15
    for: 10m
    labels:
      severity: critical
      tier: net
      service: interconnect
      context: interconnect
      dashboard: network-interconnect
      meta: 'Prober {{ $labels.name }} cannot ping target {{ $labels.dst }} in {{ $labels.probed_to }} from {{ $labels.src }} in {{ $labels.probed_from }}'
      playbook: 'docs/devops/alert/network/interconnect.html
    annotations:
      description: 'Prober {{ $labels.name }} cannot ping target {{ $labels.dst }} in {{ $labels.probed_to }} from {{ $labels.src }} in {{ $labels.probed_from }}'
      summary: 'Prober {{ $labels.name }} cannot ping target {{ $labels.dst }} in {{ $labels.probed_to }} from {{ $labels.src }} in {{ $labels.probed_from }}'
