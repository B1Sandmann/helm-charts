groups:
  - name: asa
    rules:
    - alert: NetworkASAClusterIsDegraded
      expr: sum(snmp_asa_cfwHardwareStatusValue{cfwHardwareType="7",device=~"ASA0102|ASA0102a|ASA0102fp"}) by (server_name) + sum(snmp_asa_cfwHardwareStatusValue{cfwHardwareType="6",device=~"ASA0102|ASA0102a|ASA0102fp"}) by (server_name) != 19
      for: 5m
      labels:
        severity: critical
        tier: net
        service: asa
        context: asa
        meta: "asa device `{{ $labels.devicename }}` CLUSTER-STATE is DEGRADED. Immediate device check required."
        playbook: '/docs/devops/alert/network/firewall.html#asa_cluster_degraded'
      annotations:
        description: "asa device `{{ $labels.devicename }}` CLUSTER-STATE is DEGRADED. Immediate device check required."
        summary: "asa device `{{ $labels.devicename }}` CLUSTER-STATE is DEGRADED. Immediate device check required."

    - alert: NetworkASACpuUsage
      expr: max(snmp_asa_cpmCPUTotal1minRev{devicename=~".*ASA....$"}) by (devicename) > 80
      for: 5m
      labels:
        severity: info
        tier: net
        service: asa
        context: asa
        meta: "asa device `{{ $labels.devicename }}` is running on high CPU utilisation."
      annotations:
        description: "asa device `{{ $labels.devicename }}` is running on high CPU utilisation."
        summary: "asa device `{{ $labels.devicename }}` is running on high CPU utilisation."