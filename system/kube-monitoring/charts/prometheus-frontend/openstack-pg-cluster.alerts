groups:
- name: openstack-pg-cluster.alerts
  rules:

  - alert: OpenstackPgClusterBackupMissingBarbican
    expr: pg_cluster_wale_backup_success{team="barbican"} == 0
    for: 30m
    labels:
      context: backupsuccess
      dashboard: pg_cluster
      service: pg_cluster_backup
      severity: warning
      tier: openstack
    annotations:
      description: Barbican pg-cluster backup missing. Please check pg cluster container.
      summary: Barbican pg-cluster backup missing
