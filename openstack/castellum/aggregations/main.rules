groups:
- name: castellum
  rules:
    # aggregate success/failure counters for use in alert expressions
    - record: aggregated:castellum_asset_resizes
      expr: sum(castellum_asset_resizes)
    - record: aggregated:castellum_errored_asset_resizes
      expr: sum(castellum_errored_asset_resizes)
    - record: aggregated:castellum_failed_asset_scrapes
      expr: sum(castellum_failed_asset_scrapes)
    - record: aggregated:castellum_failed_resource_scrapes
      expr: sum(castellum_failed_resource_scrapes)
    - record: aggregated:castellum_successful_asset_scrapes
      expr: sum(castellum_successful_asset_scrapes)
    - record: aggregated:castellum_successful_resource_scrapes
      expr: sum(castellum_successful_resource_scrapes)
